[
    {
        "id": "java_ch3_1",
        "text": "Which class is the superclass of all exceptions and errors in Java?",
        "options": [
            {
                "id": "a",
                "text": "java.lang.Exception"
            },
            {
                "id": "b",
                "text": "java.lang.Throwable"
            },
            {
                "id": "c",
                "text": "java.lang.Error"
            },
            {
                "id": "d",
                "text": "java.lang.Object"
            }
        ],
        "correctOptionId": "b",
        "hint": "Able to be thrown.",
        "explanation": "`Throwable` is the superclass of all errors and exceptions in the Java language."
    },
    {
        "id": "java_ch3_2",
        "text": "Which keyword is used to explicitly throw an exception?",
        "options": [
            {
                "id": "a",
                "text": "throws"
            },
            {
                "id": "b",
                "text": "throw"
            },
            {
                "id": "c",
                "text": "raise"
            },
            {
                "id": "d",
                "text": "catch"
            }
        ],
        "correctOptionId": "b",
        "hint": "Singular.",
        "explanation": "The `throw` keyword is used to explicitly throw an exception from a method or block of code."
    },
    {
        "id": "java_ch3_3",
        "text": "What is a Checked Exception?",
        "options": [
            {
                "id": "a",
                "text": "An exception checked at runtime."
            },
            {
                "id": "b",
                "text": "An exception checked at compile-time."
            },
            {
                "id": "c",
                "text": "An error."
            },
            {
                "id": "d",
                "text": "A RuntimeException."
            }
        ],
        "correctOptionId": "b",
        "hint": "Verified by compiler.",
        "explanation": "Checked exceptions are checked at compile-time. The program must explicitly handle them (try-catch) or declare them (throws)."
    },
    {
        "id": "java_ch3_4",
        "text": "Which block is guaranteed to execute regardless of exception occurrence?",
        "options": [
            {
                "id": "a",
                "text": "catch"
            },
            {
                "id": "b",
                "text": "try"
            },
            {
                "id": "c",
                "text": "finally"
            },
            {
                "id": "d",
                "text": "final"
            }
        ],
        "correctOptionId": "c",
        "hint": "At the end.",
        "explanation": "The `finally` block is executed after the try block, regardless of whether an exception is ignored or handled."
    },
    {
        "id": "java_ch3_5",
        "text": "What is the difference between `throw` and `throws`?",
        "options": [
            {
                "id": "a",
                "text": "No difference."
            },
            {
                "id": "b",
                "text": "`throw` is used in method signature, `throws` inside block."
            },
            {
                "id": "c",
                "text": "`throw` is used to throw an exception, `throws` declares an exception."
            },
            {
                "id": "d",
                "text": "`throws` is for checked, `throw` for unchecked."
            }
        ],
        "correctOptionId": "c",
        "hint": "Action vs Declaration.",
        "explanation": "`throw` is an action to throw an exception object. `throws` is used in a method signature to declare that the method might throw exceptions."
    },
    {
        "id": "java_ch3_6",
        "text": "Which exception implies a condition from which reasonable application might not recover?",
        "options": [
            {
                "id": "a",
                "text": "Exception"
            },
            {
                "id": "b",
                "text": "Error"
            },
            {
                "id": "c",
                "text": "RuntimeException"
            },
            {
                "id": "d",
                "text": "Timeout"
            }
        ],
        "correctOptionId": "b",
        "hint": "Serious problem.",
        "explanation": "`Error` indicates serious problems that a reasonable application should not try to catch (e.g., OutOfMemoryError)."
    },
    {
        "id": "java_ch3_7",
        "text": "Which of these is an unchecked exception?",
        "options": [
            {
                "id": "a",
                "text": "IOException"
            },
            {
                "id": "b",
                "text": "SQLException"
            },
            {
                "id": "c",
                "text": "NullPointerException"
            },
            {
                "id": "d",
                "text": "ClassNotFoundException"
            }
        ],
        "correctOptionId": "c",
        "hint": "Runtime Exception.",
        "explanation": "`NullPointerException` extends `RuntimeException`, making it an unchecked exception."
    },
    {
        "id": "java_ch3_8",
        "text": "Can we have a try block without a catch block?",
        "options": [
            {
                "id": "a",
                "text": "No, never."
            },
            {
                "id": "b",
                "text": "Yes, if followed by finally."
            },
            {
                "id": "c",
                "text": "Yes, always."
            },
            {
                "id": "d",
                "text": "Only in interfaces."
            }
        ],
        "correctOptionId": "b",
        "hint": "Try-Finally.",
        "explanation": "A `try` block must be followed by either a `catch` block or a `finally` block (or both)."
    },
    {
        "id": "java_ch3_9",
        "text": "How do you create a custom exception?",
        "options": [
            {
                "id": "a",
                "text": "Extend class Main."
            },
            {
                "id": "b",
                "text": "Extend class Throwable, Exception, or RuntimeException."
            },
            {
                "id": "c",
                "text": "Implement class Exception."
            },
            {
                "id": "d",
                "text": "Use 'custom' keyword."
            }
        ],
        "correctOptionId": "b",
        "hint": "Inheritance.",
        "explanation": "To create a custom exception, you define a class that extends `Exception` (for checked) or `RuntimeException` (for unchecked)."
    },
    {
        "id": "java_ch3_10",
        "text": "What happens if a method calls another method that throws a checked exception?",
        "options": [
            {
                "id": "a",
                "text": "Nothing."
            },
            {
                "id": "b",
                "text": "The caller must handle it (catch) or declare it (throws)."
            },
            {
                "id": "c",
                "text": "The program crashes."
            },
            {
                "id": "d",
                "text": "It is ignored automatically."
            }
        ],
        "correctOptionId": "b",
        "hint": "Handle or Declare.",
        "explanation": "The calling method must either handle the checked exception using `try-catch` or assume responsibility by declaring `throws`."
    },
    {
        "id": "java_ch3_11",
        "text": "What is try-with-resources?",
        "options": [
            {
                "id": "a",
                "text": "A try block with parameters."
            },
            {
                "id": "b",
                "text": "Automatic resource management mechanism introduced in Java 7."
            },
            {
                "id": "c",
                "text": "A way to try multiple resources."
            },
            {
                "id": "d",
                "text": "Multithreading."
            }
        ],
        "correctOptionId": "b",
        "hint": "Auto close.",
        "explanation": "Try-with-resources ensures that each resource (implementing AutoCloseable) is closed at the end of the statement."
    },
    {
        "id": "java_ch3_12",
        "text": "Which method prints the stack trace of an exception?",
        "options": [
            {
                "id": "a",
                "text": "printTrace()"
            },
            {
                "id": "b",
                "text": "showStack()"
            },
            {
                "id": "c",
